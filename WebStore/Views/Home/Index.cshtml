@model IEnumerable<WebStore.Model.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
</head>
<body>
<h3>Сотрудники</h3>
<hr/>
<table>
    <thead>
    <tr>
        <th>id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Дата рождения</th>
        <th>Возраст</th>
        <th></th>
    </tr>
    </thead>
    
    <tbody>
        @foreach( var employee in Model )
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Surname</td>
                <td>@employee.Name</td>
                <td>@employee.Patronymic</td>
                <td>@employee.BirthDateTime.ToShortDateString()</td>
                <td>@employee.Age</td>
                <td><a href="/Home/EmployeeDetails/@employee.Id">Инфо.</a></td>
            </tr>
        }
    </tbody>
</table>

</body>
</html>